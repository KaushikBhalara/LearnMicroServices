@model IEnumerable<ProductDto>
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
}

<div class="card">
<div class="card-header text-center fw-bolder ml-0 py-3">
    <h1>Product List</h1>
</div>
<div class="card-body">
    <div class="row">
        <div class="col-12 text-end">
            <a class="btn btn-outline-primary" asp-action="ProductCreate"><i class="bi bi-plus-square"> Create New Product</i></a>
        </div>
    </div>
    <table class="table">
        <thead>
            <tr>
                <th>Product Name</th>
                <th>Price Amount</th>
                <th>Category</th>
                <th>Description</th>
                <th>ImageUrl</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Name</td>
                    <td>@((item.Price).ToString("c"))</td>
                    <td>@item.CategoryName</td>
                    <td>@item.Description</td>
                    <td><img src="@item.ImageUrl" asp-append-version /></td>
                    <td>
                        <form asp-action="CouponDelete" method="post">
                            <button type="submit" class="btn btn-primary" asp-action="CouponDelete" asp-route-couponId="@item.ProductId"><i class="bi bi-trash-fill"></i></button>
                        </form>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
</div>
